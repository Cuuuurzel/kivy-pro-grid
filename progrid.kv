#:kivy 1.8

<ProGrid>:

    header:header
    footer:footer
    content:content

    canvas.before:
        Color:
            rgba: root.content_background_color
        Rectangle:  
            pos: root.pos
            size: root.size

    ScrollView:
        width: root.width
        height: root.height - root.header_height - root.footer_height
        pos: ( 0, root.footer_height )
        
        GridLayout:
            id: content
            size_hint: 1, None
            cols: 1

    BoxLayout:
        id: header
        pos: ( 0, root.height - root.header_height )
        width: root.width
        height: root.header_height
        orientation: 'horizontal'

        canvas.before:
            Color:
                rgba: root.header_background_color
            Rectangle:  
                pos: self.pos
                size: root.width, root.header_height

    BoxLayout:
        id: footer
        pos: ( 0, 0 )
        width: root.width
        height: root.footer_height
        orientation: 'horizontal'

        canvas.before:
            Color:
                rgba: root.footer_background_color
            Rectangle:  
                pos: self.pos
                size: root.width, root.footer_height


