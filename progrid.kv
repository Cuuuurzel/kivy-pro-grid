#:kivy 1.8

<ProGrid>:

    header:header
    footer:footer
    content:content

    orientation: 'vertical'

    canvas.before:
        Color:
            rgba: root.content_background_color
        Rectangle:  
            pos: root.pos
            size: root.size

    BoxLayout:
        id: header
        size_hint: ( 1, None )
        height: root.header_height
        orientation: 'horizontal'

        canvas.before:
            Color:
                rgba: root.header_background_color
            Rectangle:  
                pos: self.pos
                size: self.width, root.header_height

    ScrollView:
        size_hint: ( 1, 1 )
        bar_width: 7
        
        GridLayout:
            id: content
            size_hint: 1, None
            cols: 1

    BoxLayout:
        id: footer
        size_hint: ( 1, .05 )
        height: root.footer_height
        orientation: 'horizontal'

        canvas.before:
            Color:
                rgba: root.footer_background_color
            Rectangle:  
                pos: self.pos
                size: root.width, root.footer_height


