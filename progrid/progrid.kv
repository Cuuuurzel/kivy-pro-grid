#:kivy 1.8

#==============================================================================
<ProGridSearchForm>:
#==============================================================================
    keyfield: keyfield

    size_hint: 1, 1
    orientation: 'vertical'

    Label:
        font_size: root.title_font_size
        font_name: root.title_font_name
        text: root.title_text
        size_hint: ( 1, 1 if len(self.text)>0 else 0 )

    Label:
        font_size: root.hint_font_size
        font_name: root.hint_font_name
        text: root.hint_text

    FlatTextInput:
        id: keyfield
        hint: root.keyfield_hint

    FlatButton:
        text: root.search_text
        font_size: root.hint_font_size
        font_name: root.title_font_name
        on_press: root.do_search()

#==============================================================================
<ProGridCustomizator>:
#==============================================================================
    size_hint: None, None
    font_size: dp(24)
    on_press: self.customize()

#==============================================================================
<ProGrid>:
#==============================================================================
    header:header
    footer:footer
    content:content

    size:root.size
    pos:root.pos
    orientation: 'vertical'

    canvas.before:
        Color:
            rgba: root.grid_color
        Rectangle:  
            pos: root.pos
            size: root.size

    BoxLayout:
        id: header
        size_hint: ( 1, None )
        height: root.header_height
        orientation: 'horizontal'
        
        canvas.before:
            Color:
                rgba: root.header_background_color
            Rectangle:  
                pos: self.pos
                size: self.width, root.header_height

    ScrollView:
        size_hint: ( 1, 1 )
        bar_width: dp(7)
        
        GridLayout:
            id: content
            size_hint: 1, None
            cols: 1
            spacing: dp(1) #root.grid_width_h, root.grid_width_v

    BoxLayout:
        id: footer
        size_hint: ( 1, None )
        height: root.footer_height
        orientation: 'horizontal'

        canvas.before:
            Color:
                rgba: root.footer_background_color
            Rectangle:  
                pos: self.pos
                size: root.width, root.footer_height

